


@{
    ViewBag.Title = "RegistroUsuario";
}

<div class="form-horizontal">

    <h2>Crear cuenta </h2>

    <div class="form-group">
        <label for="usr">Tu Nombre:</label>
        <input type="text" class="form-control" id="name">
    </div>

    <div class="form-group">
        <label for="mail">Correo electrónico:</label>
        <input type="text" class="form-control" id="mail">
    </div>

    <div class="form-group">
        <label for="pwd">Contraseña:</label>
        <input type="password" class="form-control" id="pwd">
    </div>

    <div class="form-group">
        <label for="rpwd">Vuelva a escribir la contraseña:</label>
        <input type="password" class="form-control" id="rpwd">
    </div>

    <button type="button" class="btn btn-default">Crear cuenta</button>

</div>
