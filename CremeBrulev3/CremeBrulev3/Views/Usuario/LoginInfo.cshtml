
@{
    ViewBag.Title = "LoginInfo";
}

<link href="~/Content/styles.css" rel="stylesheet" />

@if (Session["TipoUsuario"] != "ADMIN")
{
    <h1>Hello @Session["Nombre"].ToString()</h1>
    <div class="container">
        <h2>Información Login</h2>
        <p>En esta sección puedes configurar tu perfil.</p>

        <div class="row">
            <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#collapse1" aria-expanded="false" aria-controls="collapseExample">
                Editar Nombre
            </button>
            <div class="collapse" id="collapse1">
               
                   <a href="@Url.Action("EditarNombre","Usuario")" class="btn btn-success">Editar Nombre</a>
               
            </div>
        </div>
        <div class="row">
            <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapseExample">
                Editar Email
            </button>
            <div class="collapse" id="collapse2">
                
                <a href="@Url.Action("EditarEmail","Usuario")" class="btn btn-success">Editar Email</a>

            </div>
        </div>
        <div class="row">
            <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapseExample">
                Editar Password
            </button>
            <div class="collapse" id="collapse3">
                <a href="@Url.Action("EditarPassword","Usuario")" class="btn btn-success">Editar Password</a>
            </div>
        </div>
        
        <div class="row">
            <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#collapse4" aria-expanded="false" aria-controls="collapseExample">
                Eliminar Cuenta
            </button>
            <form method="post">
                <div class="collapse" id="collapse4">
                    <div class="form-group">
                        <label for="eliminarTxt" class="control-label col-md-2">Eliminar Cuenta</label>
                        <div class="col-md-2">
                            <input id="eliminarTxt" type="hidden" class="form-control" name="eliminarTxt" />
                        </div>
                        <div class="col-md-2">
                            <input type="submit" name="btnSubmitEliminar" class="btn btn-danger" />
                        </div>
                    </div>

                </div>
            </form>
            
        </div>



    </div>

}
else{ 
    <h1>NO ERES ADMIN</h1>
}
